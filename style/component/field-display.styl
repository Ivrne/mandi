.td.image
  width 50px
  position relative
  overflow visible

  .image
    position absolute
    left 0
    top 0
    width 100%
    height 44px
    padding-bottom 0

.field-display

  .image
    width 100%
    padding-bottom 100%
    display block
    background-size cover
    background-position center center
    background-repeat no-repeat