.td.image, .td.color
  min-width 50px
  position relative
  padding 0

  .image
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    max-height 100%

.field-display

  .image
    width 100%
    display block
    background-size contain
    background-position center center
    background-repeat no-repeat

.table-list .field-display

  .image, .color
    full-cover()