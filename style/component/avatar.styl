.avatar
  avatar-size(50px)
  border-radius 100%
  background-position center center
  background-size cover
  background-repeat no-repeat
  margin auto
  background-color color-brand

  &.large
    avatar-size(200px)

.avatar-upload
  text-align center
  position relative

  .avatar
    box-shadow rgba(0, 0, 0, .2) 0 1px 2px

  button
    margin-bottom 0
    absolute-center()
    box-shadow rgba(0, 0, 0, .2) 0 2px 3px 1px
    pointer-events none

    &.fade
      opacity 0

  &:hover button.fade
    opacity 1

  a
    display block

    .spinner
      full-cover()
      background-color rgba(color-white, .7)

      &:before, &:after
        left 50%
        top 50%
        margin-left -(spinner-size / 2)
        margin-top @margin-left

  input
    display none

  .box
    margin 20px 0