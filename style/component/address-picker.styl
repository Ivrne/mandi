.address-picker
  vertical-rhythm()

  input.with-autocomplete
    border-bottom 0
    border-radius 3px 3px 0 0

  .input-wrap
    position relative

    i
      position absolute
      left 15px
      top 0
      line-height 50px
      color color-gray-dark

  input
    padding-left 40px

  .autocomplete
    list-style none
    position absolute
    top 100%
    left 0
    background color-white
    border 1px solid color-gray-light
    border-radius 0 0 3px 3px
    padding 0
    width 100%
    margin-top -15px
    box-sizing border-box
    transition border .2s
    overflow hidden
    z-index 2
    font-size 14px
    text-align left

    li
      cursor pointer
      padding 15px 20px
      border-bottom 1px solid color-gray-light
      transition color .2s, background .2s
      ellipsis()

      &:hover, &.active
        background saturation(color-cta-light, 10)
        color color-white

      &:last-child
        border-bottom 0

      &.empty
        font-style italic
        cursor default

  .display
    ellipsis()
    font-size 15px
    border 1px solid color-gray-light
    display block
    padding 13px 20px
    border-radius 3px
    font-weight 100
    transition background .2s, border .2s

    i
      margin-right 5px
      opacity .5

    &:hover, &:focus
      background rgba(color-brand-lightest, .1)
      border-color color-brand-lighter

    &.empty
      font-style normal

  &.focus .autocomplete
    border-color color-cta

    li
      
      &:hover, &.active
        background color-cta-light