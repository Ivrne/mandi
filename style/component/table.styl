.table
  display table

.thead
  display table-header-group

.tbody
  display table-row-group

.tr
  display table-row

  &.clickable
    cursor pointer

a.tr
  color color-text

  a
    color color-link

.td, .th
  display table-cell

.table-list
  width 100%
  max-width 100%
  vertical-rhythm()

  .thead .th
    background color-black
    color color-white

    &:nth-child(even)
      background lighten(color-black, 10)

  .th, .td
    box-sizing border-box
    padding 15px 20px
    font-size 13px
    position relative

  .td
    background color-gray-light

    &:nth-child(even)
      background color-gray-lighter

  .tr:nth-child(even) .td
    background darken(color-gray-light, 3)

    &:nth-child(even)
      background darken(color-gray-lighter, 3)

  .field-display
    max-height 70px
    overflow hidden

  .actions
    actions-size = 23px

    min-width (actions-size * 4) + 35px
    text-align center
    padding 0

    button
      smooth-font()
      width actions-size
      height actions-size
      line-height actions-size
      padding 0
      font-size 14px
      text-align center
      display inline-block
      position relative